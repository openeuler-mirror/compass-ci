. $CCI_SRC/container/defconfig.sh
. $CCI_SRC/lib/log.sh

lsmod | grep -q "^cifs\s" || {
	log_error "kernel module cifs is missing (try: sudo modprobe cifs)"
	exit 1
}

docker_rm result-cifs

cmd=(
	docker run
	-d
	-p 447:445
	-v /etc/localtime:/etc/localtime:ro
	-v /srv/result:/srv/result
	--name result-cifs
	--restart=always
	result-cifs
)

"${cmd[@]}"
