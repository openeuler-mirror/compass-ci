		/srv/cci/cfg_openEuler
		/etc/compass-ci/defaults
		/var/cache/result-cifs/samba
		/var/log/result-cifs/samba
		/var/lib/result-cifs/samba
		/var/run/result-cifs/samba
		/srv/tmp/result-cifs
		/srv/tmp/publisher
		/srv/log/source-manager
		/srv/log/new-repo
		/srv/log/result-webdav
		/srv/log/timer
		

)

